{
  "name": "google-drive-ftp-adapter",
  "version": "2.0.0",
  "description": "Access your Google Drive through FTP protocol",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "google-drive",
    "ftp",
    "adapter",
    "gdrive",
    "cloud-storage"
  ],
  "author": "Andres Oviedo",
  "license": "LGPL-3.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "ftpd": "^0.2.1",
    "googleapis": "^134.0.0",
    "sqlite3": "^5.1.7",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "overrides": {
    "node-gyp": "^12.2.0",
    "tar": "^7.5.7",
    "make-fetch-happen": "^15.0.3",
    "cacache": "^20.0.3"
  }
}
